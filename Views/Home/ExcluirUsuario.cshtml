@model EspaçoVerdeLogin.Models.DeleteUserViewModel

@{
    ViewData["Title"] = "Excluir Usuário";
}

<h2 class="mt-4 mb-3">Excluir Usuário</h2>
<h3 class="text-danger">Tem certeza que deseja excluir este usuário?</h3>

<div class="card p-4 shadow-sm mt-3">
    <form asp-action="ExcluirUsuario" method="post">
        @Html.AntiForgeryToken()

        <input type="hidden" asp-for="Id" />

        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <div class="form-group mb-3">
            <label asp-for="RazaoSocial" class="form-label"></label>
            <input asp-for="RazaoSocial" class="form-control-plaintext" readonly />
            <span asp-validation-for="RazaoSocial" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="CNPJ" class="form-label"></label>
            <input asp-for="CNPJ" class="form-control-plaintext" readonly />
            <span asp-validation-for="CNPJ" class="text-danger"></span>
        </div>

        <div class="form-group mb-4">
            <label asp-for="Email" class="form-label"></label>
            <input asp-for="Email" class="form-control-plaintext" readonly />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="d-flex justify-content-start">
            <button type="submit" class="btn btn-danger me-2">
                <i class="bi bi-trash"></i> Excluir
            </button>
            <a asp-controller="Home" asp-action="Usuarios" class="btn btn-secondary">
                <i class="bi bi-x-circle"></i> Cancelar
            </a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        // Incluir scripts de validação é uma boa prática mesmo para exclusão,
        // caso haja alguma validação que impeça o POST.
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}