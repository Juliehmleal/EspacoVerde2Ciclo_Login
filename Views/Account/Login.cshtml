﻿@using EspaçoVerdeLogin.ViewModels;
@model LoginViewModel;

@{
    ViewData["Title"] = "Login";
    Layout = "_AccountLayout";
}

<div class="container my-5">
    <div class="row g-0 shadow-lg rounded">
        <!-- Painel Esquerdo -->
        <div class="col-lg-5 text-white text-center p-4 d-flex flex-column justify-content-center" style="background-color: #4A7F4F;">
            <div class="d-flex justify-content-center">
                <img src="~/vendor/icons/IconeComFundo.svg" alt="logo" width="100" class="mb-4">
            </div>
            <h1>Bem-Vindo!</h1>
            <p>Deseja voltar para a página inicial?</p>
            <a asp-controller="Home" asp-action="Index" class="text-white btn btn-warning mb-3 align-content-center">Home</a>
            <p>Não possui conta? Faça seu cadastro</p>
            <a asp-controller="Login" asp-action="Cadastro" class="text-white btn btn-warning mb-3 align-content-center">Cadastro</a>
        </div>

        <!-- Painel Direito -->
        <div class="col-lg-7 bg-light p-5 d-flex flex-column justify-content-center">
            <h2 class="text-center mb-4">Login</h2>
            <form asp-action="Login" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="mb-3">
                    <label class="form-label" asp-for="Email">Email</label>
                    <input type="email" class="form-control" asp-for="Email" placeholder="E-mail: Ex: email@gmail.com">
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label" asp-for="Password">Senha</label>
                    <input type="password" class="form-control" asp-for="Password" placeholder="Senha: Ex: ********">
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <a asp-controller="Account" asp-action="VerifyEmail" class="text-decoration-none">Esqueceu sua senha?</a>
                </div>

                <div class="mb-3">
                    <label class="form-check-label">
                        <input asp-for="RememberMe" class="form-check-input" />
                        @Html.DisplayNameFor(a => a.RememberMe)
                    </label>
                </div>

                <input type="submit" value="Login" class="btn btn-success w-100 p-2" />
                <p class="text-center mt-2">
                    Don't have an account? <a asp-controller="Account" asp-action="Register" class="text-decoration-none">Register</a>
                </p>
                <div class="text-center">
                    <a asp-controller="Home" asp-action="Index" class="text-decoration-none mt-3">Back</a>
                </div>
            </form>
        </div>
    </div>
</div>


@section Scripts {
    @{
        await Html.PartialAsync("_ValidationScriptsPartial");
    }
}