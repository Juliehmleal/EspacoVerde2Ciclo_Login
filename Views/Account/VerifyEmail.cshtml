@using EspaçoVerdeLogin.ViewModels;
@model VerifyEmailViewModel;

@{
    ViewData["Title"] = "Verificação de Email";
    Layout = "_AccountLayout";
}

<div class="container my-5">
        <div class="col-lg-7 bg-light p-5 d-flex flex-column justify-content-center">
            <h2 class="text-center mb-4">Verificando Email</h2>
            <form asp-action="VerifyEmail" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="mb-3">
                    <label class="form-label" asp-for="Email">Email</label>
                    <input type="email" class="form-control" asp-for="Email" placeholder="E-mail: Ex: email@gmail.com">
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <input type="submit" value="Verify" class="btn btn-success w-100 p-2" />
                <p class="text-center mt-2">
                    Don't have an account? <a asp-controller="Account" asp-action="Register" class="text-decoration-none">Register</a>
                </p>
                <div class="text-center">
                    <a asp-controller="Home" asp-action="Index" class="text-decoration-none mt-3">Back</a>
                </div>
            </form>
        </div>
    </div>
</div>


@section Scripts {
    @{
        await Html.PartialAsync("_ValidationScriptsPartial");
    }
}